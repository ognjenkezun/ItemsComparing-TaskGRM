@model GRM_Task.Models.CompareModel

<hr />
<h4>CompareModel</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-controller="Home" asp-action="Index" method="post">
            <div class="container-fluid">
                <div class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger col-12"></div>
                    <div class="form-group col-3" hidden>
                        <label asp-for="Position1" class="control-label"></label>
                        <input asp-for="Position1" class="form-control" readonly />
                        <span asp-validation-for="Position1" class="text-danger"></span>
                    </div>
                    <div class="form-group col-3" hidden>
                        <label asp-for="Position2" class="control-label"></label>
                        <input asp-for="Position2" class="form-control" readonly />
                        <span asp-validation-for="Position2" class="text-danger"></span>
                    </div>
                    <div class="form-group col-4">
                        <label asp-for="Name1" class="control-label">Item Name</label>
                        <input asp-for="Name1" class="form-control" readonly />
                        <span asp-validation-for="Name1" class="text-danger"></span>
                    </div>
                    <div class="form-group col-2 text-center">
                        <label asp-for="Value1" class="control-label">Value</label>
                        <input asp-for="Value1" class="form-control text-center" min="0" required />
                        <span asp-validation-for="Value1" class="text-danger"></span>
                    </div>
                    <div class="form-group col-3" hidden>
                        <label asp-for="Score1" class="control-label"></label>
                        <input asp-for="Score1" class="form-control" readonly />
                        <span asp-validation-for="Score1" class="text-danger"></span>
                    </div>
                    <div class="form-group col-3" hidden>
                        <label asp-for="Score2" class="control-label"></label>
                        <input asp-for="Score2" class="form-control" readonly />
                        <span asp-validation-for="Score2" class="text-danger"></span>
                    </div>
                    <div class="form-group col-2 text-center">
                        <label asp-for="Value2" class="control-label">Value</label>
                        <input asp-for="Value2" class="form-control text-center" min="0" required />
                        <span asp-validation-for="Value2" class="text-danger"></span>
                    </div>
                    <div class="form-group col-4 text-right">
                        <label asp-for="Name2" class="control-label">Item Name</label>
                        <input asp-for="Name2" class="form-control text-right" readonly />
                        <span asp-validation-for="Name2" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 text-center">
                        <div class="form-group text-center">
                            <input type="submit" value="Compare" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
